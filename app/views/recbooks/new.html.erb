<% provide(:title, 'Suggest books') %>
<h1>Suggest a new book</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@recbook) do |f| %>
      <%= f.label :isbn %>
      <%= f.text_field :isbn %>
      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.label :description %>
      <%= f.text_field :description %>
      <%= f.label :author %>
      <%= f.text_field :author %>
      <%= f.submit "Submit suggest", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
