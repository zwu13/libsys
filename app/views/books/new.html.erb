<% provide(:title, 'books') %>
<h1>books</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@book) do |f| %>
      <%= f.label :isbn %>
      <%= f.text_field :isbn %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.label :author %>
      <%= f.text_field :author %>

      <%= f.label :status %>
      <%= f.text_field :status %>
      
      <%= "\n" %>

      <%= f.submit "Create my book", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
